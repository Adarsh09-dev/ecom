<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>User Profile</title>
    <link rel="stylesheet" href="/user-style/profile.css" />
</head>

<body>

<div class="container">

    <!-- Sidebar -->
    <div class="sidebar">
        <button class="active">Personal Information</button>
        <button>My Orders</button>
        <button>Manage Address</button>
        <button>Payment Method</button>
        <button>Password Manager</button>

        <!-- Logout Form -->
        <form action="/user/logout" method="POST">
            <button type="submit">Logout</button>
        </form>
    </div>

    <!-- Main Content -->
    <div class="main-content">

        <div class="profile-header">
            <div class="avatar">

                <img 
                    src="<%= user?.avatar || '' %>" 
                    alt="Profile Image"
                />

                <label for="profile_image" class="edit-icon">âœŽ</label>

            </div>
        </div>

        <!-- Profile Update Form -->
        <form
            class="profile-form"
            action="/user/updated-profile/?_method=PUT"
            method="POST"
            enctype="multipart/form-data"
        >

            <!-- METHOD OVERRIDE -->
            <input type="hidden" name="_method" value="put">

            <div class="row">

                <div class="form-group">
                    <label>First Name *</label>
                    <input
                        type="text"
                        name="first_name"
                        value="<%= user?.name || '' %>"
                        required
                    />
                </div>

                <div class="form-group">
                    <label>Address *</label>
                    <input
                        type="text"
                        name="address"
                        value="<%= user?.address_detials || '' %>"
                        required
                    />
                </div>

            </div>

            <div class="form-group">
                <label>Email *</label>
                <input
                    type="email"
                    name="email"
                    value="<%= user?.email || '' %>"
                    required
                />
            </div>

            <div class="form-group">
                <label>Phone *</label>
                <input
                    type="Number"
                    name="phone"
                    value="<%= user?.mobile || '' %>"
                    required
                />
            </div>

            <div class="form-group">
                <label>Gender *</label>
                <select name="gender" required>

                    <option value="female"
                        <%= user?.gender === 'female' ? 'selected' : '' %>>
                        Female
                    </option>

                    <option value="male"
                        <%= user?.gender === 'male' ? 'selected' : '' %>>
                        Male
                    </option>

                    <option value="other"
                        <%= user?.gender === 'other' ? 'selected' : '' %>>
                        Other
                    </option>

                </select>
            </div>

            <div class="form-group">
                <label>Profile Image</label>
                <input
                    type="file"
                    name="profile_image"
                    accept="image/*"
                />
            </div>

            <button type="submit" class="update-btn">
                Update Changes
            </button>

        </form>

    </div>
</div>

</body>
</html>
