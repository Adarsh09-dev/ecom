<body class="body" >

      <div class="main-container">

      <div  class="box-1" >
        <img class="img" src="/img/bg.png" alt="">
      </div>

      <div class="box-2">
   
<div class="container">
      <h2 class="head">Reset Password</h2> 
 
        <form  class="form" action="/reset-password" method="put">
            
            <div class="form-group password-box" >
                <label for="name">New Password</label>
                <input class="input" type="password" id="newPassword" name="newPassword" placeholder="" required autocomplete="off">
                  <i class="fa-solid fa-eye toggle-password" onclick="togglePassword()"></i>

            </div>
            <div class="form-group password-box">
                <label for="password">Password:</label>
                <input class="input" type="password" name="password" id="password" placeholder="" required>
                  <i class="fa-solid fa-eye toggle-password" onclick="togglePassword()"></i>
            </div>
            <button type="submit" class="submit-btn">Submit</button>
        </form>
        </div>
    </div>
